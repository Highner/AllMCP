    <script src="https://cdn.jsdelivr.net/npm/topojson-client@3/dist/topojson-client.min.js" crossorigin="anonymous"></script>
    <script>
        (function renderMap() {
            const mapContainer = document.getElementById('map');
            if (!mapContainer || typeof d3 === 'undefined' || typeof topojson === 'undefined') {
                return;
            }

            const width = 960;
            const height = 540;

            let highlightData = Array.isArray(window.wineSurferHighlightData)
                ? window.wineSurferHighlightData
                : [];

            if (!Array.isArray(highlightData) || !highlightData.length) {
                const highlightDataElement = document.getElementById('wineHighlightData');
                if (highlightDataElement?.textContent?.trim()?.length) {
                    try {
                        highlightData = JSON.parse(highlightDataElement.textContent);
                    } catch (error) {
                        console.warn('Unable to parse highlight data payload for map', error);
                        highlightData = [];
                    }
                }

                highlightDataElement?.remove();
                window.wineSurferHighlightData = Array.isArray(highlightData) ? highlightData : [];
            }

            const mapHoverCard = document.createElement('article');
            mapHoverCard.className = 'map-hover-card region-card wine-card wine-surface wine-surface-border wine-surfer-card';
            mapHoverCard.hidden = true;
            mapHoverCard.setAttribute('aria-hidden', 'true');
            mapHoverCard.style.left = '-9999px';
            mapHoverCard.style.top = '-9999px';
            mapContainer.appendChild(mapHoverCard);

            let activeHoverPoint = null;

            const normalizeUserId = (value) => {
                if (value === null || value === undefined) {
                    return '';
                }

                if (typeof value === 'string') {
                    return value.trim().toLowerCase();
                }

                return String(value).trim().toLowerCase();
            };

            const normalizedCurrentUserId = normalizeUserId(window.wineSurferCurrentUser?.domainUserId);

            const formatScore = (value) => {
                const numeric = Number(value);
                return Number.isFinite(numeric) ? numeric.toFixed(1) : '—';
            };

            const formatCount = (value) => {
                const numeric = Number(value);
                if (!Number.isFinite(numeric)) {
                    return '0';
                }

                return Math.max(0, Math.round(numeric)).toString();
            };

            const resolveAverageScore = (point) => {
                if (!point) {
                    return null;
                }

                const baseAverage = Number(point.averageScore);
                if (!normalizedCurrentUserId) {
                    return Number.isFinite(baseAverage) ? baseAverage : null;
                }

                const userScores = Array.isArray(point.userAverageScores) ? point.userAverageScores : [];
                const matchingScore = userScores.find(score => normalizeUserId(score.userId) === normalizedCurrentUserId);
                if (matchingScore && matchingScore.averageScore != null) {
                    const numericScore = Number(matchingScore.averageScore);
                    if (Number.isFinite(numericScore)) {
                        return numericScore;
                    }
                }

                return Number.isFinite(baseAverage) ? baseAverage : null;
            };

            const appendMetric = (list, title, value) => {
                const metric = document.createElement('div');
                metric.className = 'metric wine-card__stat';

                const term = document.createElement('dt');
                term.textContent = title;

                const detail = document.createElement('dd');
                detail.textContent = value;

                metric.appendChild(term);
                metric.appendChild(detail);
                list.appendChild(metric);
            };

            const renderMapHoverCard = (point) => {
                mapHoverCard.replaceChildren();
                const isSuggested = Boolean(point?.isSuggested);
                mapHoverCard.classList.toggle('region-card--suggested', isSuggested);

                if (isSuggested) {
                    const tag = document.createElement('span');
                    tag.className = 'region-card__tag';
                    tag.textContent = 'Suggested';
                    mapHoverCard.appendChild(tag);
                }

                const labelText = typeof point?.label === 'string' ? point.label.trim() : '';
                const safeLabel = labelText || 'Unnamed region';

                const label = document.createElement('span');
                label.className = 'label wine-card__title';
                label.textContent = safeLabel;
                mapHoverCard.appendChild(label);

                const countryText = typeof point?.country === 'string' ? point.country.trim() : '';
                if (countryText) {
                    const country = document.createElement('span');
                    country.className = 'country wine-card__subtitle';
                    country.textContent = countryText;
                    mapHoverCard.appendChild(country);
                }

                if (isSuggested) {
                    const note = document.createElement('p');
                    note.className = 'region-card__suggested-note';

                    const reasonText = typeof point?.suggestionReason === 'string'
                        ? point.suggestionReason.trim()
                        : '';

                    if (reasonText) {
                        const reason = document.createElement('span');
                        reason.className = 'region-card__suggested-reason';
                        reason.textContent = reasonText;
                        note.appendChild(reason);
                    } else {
                        const defaultReason = document.createElement('span');
                        defaultReason.textContent = 'Suggested by your taste profile.';
                        note.appendChild(defaultReason);
                    }

                    const instructions = document.createElement('span');
                    instructions.className = 'region-card__suggested-instructions';
                    instructions.textContent = 'Zoom the map to explore this appellation.';
                    note.appendChild(instructions);

                    mapHoverCard.appendChild(note);
                    return;
                }

                const stats = document.createElement('dl');
                stats.className = 'inventory-overview wine-card__stats';
                stats.setAttribute('aria-label', `Inventory overview for ${safeLabel}`);
                appendMetric(stats, 'Cellared', formatCount(point?.bottlesCellared));
                appendMetric(stats, 'Consumed', formatCount(point?.bottlesConsumed));
                appendMetric(stats, 'Avg. Score', formatScore(resolveAverageScore(point)));

                mapHoverCard.appendChild(stats);
            };

            const hideMapHoverCard = () => {
                mapHoverCard.hidden = true;
                mapHoverCard.setAttribute('aria-hidden', 'true');
                mapHoverCard.style.left = '-9999px';
                mapHoverCard.style.top = '-9999px';
                mapHoverCard.dataset.regionIndex = '';
                activeHoverPoint = null;
            };

            const updateMapHoverCardPosition = (point) => {
                if (!point || mapHoverCard.hidden) {
                    return;
                }

                const regionIndex = Number.isInteger(point.index)
                    ? point.index
                    : Number.parseInt(mapHoverCard.dataset?.regionIndex ?? '', 10);

                if (!Number.isInteger(regionIndex)) {
                    hideMapHoverCard();
                    return;
                }

                const highlightNode = mapContainer.querySelector(`.highlight-point[data-region-index="${regionIndex}"]`);
                if (!highlightNode) {
                    hideMapHoverCard();
                    return;
                }

                const containerRect = mapContainer.getBoundingClientRect();
                const nodeRect = highlightNode.getBoundingClientRect();
                const cardRect = mapHoverCard.getBoundingClientRect();

                if (!containerRect.width || !cardRect.width) {
                    return;
                }

                const offset = 16;
                const padding = 12;

                let left = nodeRect.left - containerRect.left + offset;
                let top = nodeRect.top - containerRect.top + offset;

                if (left + cardRect.width + padding > containerRect.width) {
                    left = nodeRect.left - containerRect.left - cardRect.width - offset;
                }

                if (top + cardRect.height + padding > containerRect.height) {
                    top = nodeRect.top - containerRect.top - cardRect.height - offset;
                }

                left = Math.max(padding, Math.min(left, containerRect.width - cardRect.width - padding));
                top = Math.max(padding, Math.min(top, containerRect.height - cardRect.height - padding));

                if (!Number.isFinite(left) || !Number.isFinite(top)) {
                    return;
                }

                mapHoverCard.style.left = `${left}px`;
                mapHoverCard.style.top = `${top}px`;
            };

            const showMapHoverCard = (point) => {
                if (!point) {
                    hideMapHoverCard();
                    return;
                }

                activeHoverPoint = point;
                mapHoverCard.style.left = '-9999px';
                mapHoverCard.style.top = '-9999px';
                renderMapHoverCard(point);
                mapHoverCard.dataset.regionIndex = Number.isInteger(point.index) ? String(point.index) : '';
                mapHoverCard.hidden = false;
                mapHoverCard.setAttribute('aria-hidden', 'false');
                updateMapHoverCardPosition(point);
            };

            const handleResize = () => {
                if (activeHoverPoint) {
                    updateMapHoverCardPosition(activeHoverPoint);
                }
            };

            window.addEventListener('resize', handleResize);
            mapContainer.addEventListener('mouseleave', hideMapHoverCard);

            const svg = d3.select(mapContainer)
                .append('svg')
                .attr('class', 'map-svg')
                .attr('viewBox', `0 0 ${width} ${height}`)
                .attr('preserveAspectRatio', 'xMidYMid meet')
                .attr('aria-hidden', 'true');

            const mapGroup = svg.append('g')
                .attr('class', 'map-group');

            const countryLayer = mapGroup.append('g')
                .attr('class', 'country-layer');

            const highlightGroup = mapGroup.append('g')
                .attr('class', 'highlight-group');

            const projection = d3.geoMercator();
            const path = d3.geoPath(projection);

            const zoomBehavior = d3.zoom()
                .scaleExtent([1, 8])
                .translateExtent([[0, 0], [width, height]])
                .on('zoom', (event) => {
                    mapGroup.attr('transform', event.transform);
                    if (activeHoverPoint) {
                        updateMapHoverCardPosition(activeHoverPoint);
                    }
                });

            svg.call(zoomBehavior).on('dblclick.zoom', null);

            fetch('https://cdn.jsdelivr.net/npm/world-atlas@2/countries-110m.json')
                .then(response => response.json())
                .then(worldData => {
                    const countries = topojson.feature(worldData, worldData.objects.countries);
                    const latitudeLimit = 60;
                    const visibleBand = {
                        type: 'Polygon',
                        coordinates: [[
                            [-180, -latitudeLimit],
                            [180, -latitudeLimit],
                            [180, latitudeLimit],
                            [-180, latitudeLimit],
                            [-180, -latitudeLimit]
                        ]]
                    };

                    projection.fitExtent(
                        [[0, 0], [width, height]],
                        visibleBand
                    );

                    countryLayer
                        .selectAll('path')
                        .data(countries.features)
                        .join('path')
                        .attr('class', 'country')
                        .attr('d', path);

                    const highlightPoints = highlightGroup
                        .selectAll('g.highlight-point')
                        .data(highlightData)
                        .join('g')
                        .attr('class', d => d.isSuggested ? 'highlight-point is-suggested' : 'highlight-point')
                        .attr('data-region-index', d => Number.isInteger(d.index) ? d.index : null)
                        .attr('transform', d => {
                            const projected = projection([d.longitude, d.latitude]);
                            return projected ? `translate(${projected[0]}, ${projected[1]})` : null;
                        });

                    highlightPoints.append('circle')
                        .attr('class', 'halo')
                        .attr('r', 9);

                    highlightPoints.append('circle')
                        .attr('class', 'core')
                        .attr('r', 3.2);

                    highlightPoints.append('text')
                        .attr('class', 'highlight-label')
                        .attr('y', 16)
                        .attr('text-anchor', 'middle')
                        .text(d => formatHighlightLabel(d));

                    highlightPoints.append('title')
                        .text(d => {
                            const formattedLabel = formatHighlightLabel(d);
                            if (!formattedLabel) {
                                return '';
                            }

                            return d.isSuggested ? `${formattedLabel} (Suggested appellation)` : formattedLabel;
                        });

                    const regionCards = Array.from(document.querySelectorAll('.regions-panel .region-card'));

                    let selectedIndex = null;

                    const setHoveredIndex = (index) => {
                        highlightPoints.classed('is-hovered', d => d.index === index);
                        regionCards.forEach(card => {
                            const cardIndex = Number(card.dataset?.regionIndex ?? -1);
                            card.classList.toggle('is-hovered', cardIndex === index);
                        });
                    };

                    const focusOnPoint = (point) => {
                        if (!point) {
                            return;
                        }

                        const coordinates = projection([point.longitude, point.latitude]);
                        if (!coordinates) {
                            return;
                        }

                        const [x, y] = coordinates;
                        const scale = 3.2;
                        svg.transition()
                            .duration(600)
                            .call(
                                zoomBehavior.transform,
                                d3.zoomIdentity
                                    .translate(width / 2, height / 2)
                                    .scale(scale)
                                    .translate(-x, -y)
                            );
                    };

                    const setSelectedIndex = (index, { focus = false } = {}) => {
                        const point = highlightData.find(d => d.index === index);

                        if (index === selectedIndex) {
                            if (focus && point) {
                                focusOnPoint(point);
                            }

                            if (point) {
                                showMapHoverCard(point);
                            } else {
                                hideMapHoverCard();
                            }

                            return;
                        }

                        selectedIndex = index;
                        highlightPoints.classed('is-selected', d => d.index === index);
                        regionCards.forEach(card => {
                            const cardIndex = Number(card.dataset?.regionIndex ?? -1);
                            const isSelected = cardIndex === index;
                            card.classList.toggle('is-selected', isSelected);
                            if (isSelected) {
                                card.scrollIntoView({ block: 'nearest', behavior: 'smooth' });
                            }
                        });

                        if (point) {
                            showMapHoverCard(point);
                        } else {
                            hideMapHoverCard();
                        }

                        if (focus && point) {
                            focusOnPoint(point);
                        }
                    };

                    highlightPoints
                        .on('mouseenter', (_, d) => {
                            setHoveredIndex(d.index);
                            showMapHoverCard(d);
                        })
                        .on('mouseleave', () => {
                            setHoveredIndex(null);
                            hideMapHoverCard();
                        })
                        .on('click', (_, d) => setSelectedIndex(d.index, { focus: true }));

                    regionCards.forEach(card => {
                        const index = Number(card.dataset?.regionIndex ?? -1);
                        if (!Number.isInteger(index) || index < 0) {
                            return;
                        }

                        card.addEventListener('mouseenter', () => setHoveredIndex(index));
                        card.addEventListener('mouseleave', () => setHoveredIndex(null));
                        card.addEventListener('click', () => setSelectedIndex(index, { focus: true }));
                    });

                })
                .catch(error => {
                    console.error('Failed to render world map', error);
                });
        })();
