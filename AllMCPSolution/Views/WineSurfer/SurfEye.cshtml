        .surf-eye-cellar-message {
            margin: 0;
            font-size: 0.85rem;
            letter-spacing: 1px;
            text-transform: uppercase;
            color: rgba(244, 241, 234, 0.6);
        }

        .surf-eye-cellar-message[data-state="success"] {
            color: #9cf2c6;
        }

        .surf-eye-cellar-message[data-state="error"] {
            color: #ff9ca3;
        }

        .surf-eye-empty {
