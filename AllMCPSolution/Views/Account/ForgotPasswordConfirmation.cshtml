@model AllMCPSolution.Models.PasswordResetNotificationViewModel
@using AllMCPSolution.Controllers
@{
    Layout = null;
    var currentPath = Context.Request.Path.Value ?? string.Empty;
    var loginUrl = Url.Action("Login", "Account");
    var resetLink = Model?.ResetLink;
    var topBarModel = ViewData["WineSurferTopBarModel"] as WineSurferTopBarModel
        ?? WineSurferTopBarModel.Empty(currentPath);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Reset instructions sent â€¢ Wine Surfer</title>
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.png" />
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#050505" />
    @await Html.PartialAsync("_AuthStyles")
    <script defer src="/js/pwa.js"></script>
</head>
<body class="wine-app wine-app--with-bottom-nav">
    <div class="page-content">
        @await Html.PartialAsync("_WineSurferTopBar", topBarModel)
        <main class="auth-main">
            <section class="auth-card wine-surface wine-surface-border wine-card-hover" aria-labelledby="forgotPasswordConfirmationTitle">
                <header>
                    <h1 id="forgotPasswordConfirmationTitle" class="auth-title">Check your inbox</h1>
                    <p class="auth-subtitle">If an account matches <strong>@Model?.Email</strong>, we&rsquo;ve sent password reset instructions.</p>
                </header>

                <div class="auth-links">
                    <a href="@loginUrl">Return to sign in</a>
                </div>

                @if (!string.IsNullOrWhiteSpace(resetLink))
                {
                    <div class="auth-alert success" role="status">
                        Use the secure reset link below while testing this environment:
                    </div>
                    <div class="auth-links">
                        <a href="@resetLink">Reset password now</a>
                    </div>
                }
            </section>
        </main>
    </div>
    @await Html.PartialAsync("_WineSurferBottomNav", Context?.Request?.Path.Value)
</body>
</html>
