@using AllMCPSolution.Controllers
@{
    Layout = null;
    var currentPath = Context.Request.Path.Value ?? string.Empty;
    var loginUrl = Url.Action("Login", "Account");
    var topBarModel = ViewData["WineSurferTopBarModel"] as WineSurferTopBarModel
        ?? WineSurferTopBarModel.Empty(currentPath);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Password updated â€¢ Wine Surfer</title>
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.png" />
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#050505" />
    @await Html.PartialAsync("_AuthStyles")
    <script defer src="/js/pwa.js"></script>
</head>
<body class="wine-app">
    <div class="page-content">
        @await Html.PartialAsync("_WineSurferTopBar", topBarModel)
        <main class="auth-main">
            <section class="auth-card wine-surface wine-surface-border wine-card-hover" aria-labelledby="resetPasswordConfirmationTitle">
                <header>
                    <h1 id="resetPasswordConfirmationTitle" class="auth-title">Password updated</h1>
                    <p class="auth-subtitle">You can now sign in with your new password.</p>
                </header>

                <div class="auth-links">
                    <a href="@loginUrl">Back to sign in</a>
                </div>
            </section>
        </main>
    </div>
</body>
</html>
