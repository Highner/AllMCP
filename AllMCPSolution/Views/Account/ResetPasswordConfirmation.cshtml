@{
    Layout = null;
    var currentPath = Context.Request.Path.Value ?? string.Empty;
    var loginUrl = Url.Action("Login", "Account");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Password updated â€¢ Wine Surfer</title>
    @await Html.PartialAsync("_AuthStyles")
</head>
<body>
    <div class="page-content">
        @await Html.PartialAsync("_WineSurferTopBar", currentPath)
        <main class="auth-main">
            <section class="auth-card" aria-labelledby="resetPasswordConfirmationTitle">
                <header>
                    <h1 id="resetPasswordConfirmationTitle" class="auth-title">Password updated</h1>
                    <p class="auth-subtitle">You can now sign in with your new password.</p>
                </header>

                <div class="auth-links">
                    <a href="@loginUrl">Back to sign in</a>
                </div>
            </section>
        </main>
    </div>
</body>
</html>
