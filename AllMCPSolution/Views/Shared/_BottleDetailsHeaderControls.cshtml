<div id="detail-add-row" class="crud-table__add-row detail-add-toolbar" hidden>
    <div class="detail-add-inputs">
        <label class="detail-add-input-label">
            <span>Location</span>
            <select class="detail-add-location" aria-label="Bottle location">
                <option value="">No location</option>
            </select>
        </label>
        <label class="detail-add-input-label">
            <span>Price</span>
            <input type="number" class="detail-add-price" step="0.01" min="0" placeholder="0.00" aria-label="Price" />
        </label>
        <label class="detail-add-quantity-label">
            <span>Quantity</span>
            <select class="detail-add-quantity-select" aria-label="Bottle quantity">
                @for (var quantity = 1; quantity <= 12; quantity++)
                {
                    <option value="@quantity">@quantity</option>
                }
            </select>
        </label>
    </div>
    <button type="button" class="detail-add-submit crud-table__action-button">Add Bottles</button>

</div>
