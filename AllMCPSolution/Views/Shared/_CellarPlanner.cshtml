@using AllMCPSolution.Models
@{
    var focusOptions = new (string Value, string Label)[]
    {
        ("aging", "Prioritize aging potential"),
        ("regions", "Spotlight wine regions"),
        ("prestige", "Showcase prestige bottles")
    };
}
<section class="cellar-planner" data-cellar-planner>
    @(Html.PartialAsync("_InventorySectionHeader", new InventorySectionHeaderModel
    {
        Title = "Cellar Planner",
        Subtitle = "Generate a layout for your bottles",
        AdditionalCssClass = "cellar-planner__header"
    }).GetAwaiter().GetResult())
    <article class="wine-card wine-surface wine-surface-border cellar-planner__card">
        <form class="cellar-planner__form" data-cellar-planner-form>
            @Html.AntiForgeryToken()
            <label class="cellar-planner__label">
                <span class="cellar-planner__label-text">Planning focus</span>
                <select class="cellar-planner__select" data-cellar-planner-focus aria-label="Select planning focus">
                    @foreach (var option in focusOptions)
                    {
                        <option value="@option.Value">@option.Label</option>
                    }
                </select>
            </label>
            <button type="button" class="wine-surfer-button wine-surfer-button--orange cellar-planner__submit" data-cellar-planner-submit>
                Make plan
            </button>
            <label class="cellar-planner__label cellar-planner__result-label">
                <span class="cellar-planner__label-text">Storage plan</span>
                <textarea class="cellar-planner__output" data-cellar-planner-output rows="10" readonly placeholder="Your storage plan will appear here."></textarea>
            </label>
            <p class="cellar-planner__status" data-cellar-planner-status aria-live="polite"></p>
        </form>
    </article>
</section>
