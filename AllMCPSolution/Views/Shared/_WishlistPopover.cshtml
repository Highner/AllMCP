@using System
@using System.Collections.Generic
@using AllMCPSolution.Models
@{
    var wishlistFormModel = new InventoryAddFormPartialModel
    {
        Locations = Array.Empty<BottleLocationOption>(),
        FormClass = "inventory-add-form wishlist-form",
        UseNoValidate = true,
        IntroClass = "inventory-add-intro wishlist-intro",
        IntroText = "Choose a wishlist to save this wine for later tasting.",
        WineFieldClass = "inventory-add-field wishlist-field",
        WineLabelClass = "inventory-add-label wishlist-label",
        ComboboxClass = "inventory-add-combobox wishlist-combobox",
        ComboboxAttributes = new Dictionary<string, string?>(StringComparer.OrdinalIgnoreCase)
        {
            ["data-wishlist-combobox"] = null
        },
        SearchInputClass = "inventory-add-wine-search wishlist-wine-search",
        SearchHiddenInputClass = "inventory-add-wine-id wishlist-wine-id",
        ResultsContainerClass = "inventory-add-wine-results wishlist-wine-results",
        ResultsContainerId = "wishlist-wine-results",
        SummaryClass = "inventory-add-summary wishlist-summary",
        SummaryText = "Start typing to find an existing wine.",
        VintageFieldClass = "inventory-add-field wishlist-field wishlist-field--split",
        VintageLabelClass = "inventory-add-label wishlist-label",
        VintageInputClass = "inventory-add-vintage wishlist-vintage",
        VintageHintText = null,
        LocationFieldClass = "inventory-add-field wishlist-field",
        LocationLabelClass = "inventory-add-label wishlist-label",
        QuantityFieldClass = "inventory-add-field wishlist-field",
        QuantityLabelClass = "inventory-add-label wishlist-label",
        ShowLocation = false,
        ShowQuantity = false,
        ErrorClass = "inventory-add-error wishlist-error",
        ActionsClass = "inventory-add-actions wishlist-actions",
        CancelButtonClass = "crud-table__action-button secondary inventory-add-cancel wishlist-cancel",
        SubmitButtonClass = "crud-table__action-button inventory-add-submit wishlist-submit",
        SubmitButtonText = "Add to wishlist",
        AdditionalFieldsPartial = "_WishlistFormFields"
    };
    var wishlistFormContent = await Html.PartialAsync("_InventoryAddForm", wishlistFormModel);
    var modal = new WineSurferModalShell
    {
        BackdropId = "wishlist-overlay",
        BackdropCssClass = "inventory-add-overlay wishlist-overlay wine-surfer-modal-backdrop",
        BackdropAttributes = new Dictionary<string, string?>
        {
            ["hidden"] = null,
            ["aria-hidden"] = "true"
        },
        DialogId = "wishlist-popover",
        DialogCssClass = "inventory-add-popover wishlist-popover wine-surfer-modal",
        DialogAttributes = new Dictionary<string, string?>
        {
            ["aria-labelledby"] = "wishlist-title"
        },
        HeaderCssClass = "wine-surfer-modal__header inventory-add-header wishlist-header",
        Title = "Add to wishlist",
        TitleCssClass = "wine-surfer-modal__title inventory-add-title wishlist-title",
        TitleElementId = "wishlist-title",
        BodyCssClass = "wine-surfer-modal__body inventory-add-body wishlist-body",
        CloseButtonCssClass = "wine-surfer-modal__close inventory-add-close wishlist-close",
        CloseButtonLabel = "Close wishlist dialog",
        CloseButtonAttributes = new Dictionary<string, string?>
        {
            ["data-wishlist-close"] = null
        },
        BodyContent = _ => wishlistFormContent
    };
}

@await Html.PartialAsync("_WineSurferModalShell", modal)
