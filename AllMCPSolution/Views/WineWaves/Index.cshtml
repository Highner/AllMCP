    <script>
        (function () {
            const trigger = document.querySelector('[data-make-waves-trigger]');
            const popover = document.querySelector('[data-make-waves-popover]');
            if (!trigger || !popover) {
                return;
            }

            const form = popover.querySelector('[data-make-waves-form]');
            const cancelButton = popover.querySelector('[data-make-waves-cancel]');
            const submitButton = popover.querySelector('[data-make-waves-submit]');
            const filterInput = popover.querySelector('[data-make-waves-filter]');
            const list = popover.querySelector('[data-make-waves-list]');
            const emptyState = popover.querySelector('[data-make-waves-empty]');
            const optionSelector = '[data-make-waves-option]';
            const endpoint = '/wine-surfer/wine-waves/make';
            let lastFocusedElement = null;
            let applyFilter = null;

            const focusFirstCheckbox = () => {
                if (!list) {
                    return;
                }

                const firstCheckbox = list.querySelector(`${optionSelector}:not([hidden]) input[type="checkbox"]:not(:disabled)`);
                if (firstCheckbox && typeof firstCheckbox.focus === 'function') {
                    firstCheckbox.focus();
                    return;
                }

                if (filterInput && typeof filterInput.focus === 'function') {
                    filterInput.focus();
                }
            };

            const closePopover = () => {
                popover.setAttribute('hidden', 'hidden');
                document.body.classList.remove('waves-popover-open');
                popover.classList.remove('open');
                trigger.setAttribute('aria-expanded', 'false');

                if (filterInput && typeof applyFilter === 'function') {
                    filterInput.value = '';
                    applyFilter();
                }

                if (lastFocusedElement && typeof lastFocusedElement.focus === 'function') {
                    lastFocusedElement.focus();
                } else {
                    trigger.focus();
                }
            };

            const openPopover = () => {
                if (trigger.hasAttribute('disabled')) {
                    return;
                }

                lastFocusedElement = document.activeElement;
                popover.removeAttribute('hidden');
                document.body.classList.add('waves-popover-open');
                popover.classList.add('open');
                trigger.setAttribute('aria-expanded', 'true');

                if (typeof applyFilter === 'function') {
                    applyFilter();
                }

                focusFirstCheckbox();
            };

            if (filterInput && list) {
                const options = Array.from(list.querySelectorAll(optionSelector));
                applyFilter = () => {
                    const query = filterInput.value.trim().toLowerCase();
                    let visibleCount = 0;

                    options.forEach((option) => {
                        const label = option.querySelector('[data-make-waves-option-label]');
                        const details = option.querySelector('[data-make-waves-option-details]');
                        const status = option.querySelector('[data-make-waves-option-status]');
                        const text = [
                            label?.textContent ?? '',
                            details?.textContent ?? '',
                            status?.textContent ?? ''
                        ].join(' ').toLowerCase();

                        const matches = query.length === 0 || text.includes(query);

                        if (!matches) {
                            option.setAttribute('hidden', 'hidden');
                            option.setAttribute('aria-hidden', 'true');
                        } else {
                            option.removeAttribute('hidden');
                            option.removeAttribute('aria-hidden');
                        }

                        const checkbox = option.querySelector('[data-make-waves-checkbox]');
                        if (checkbox) {
                            if (!matches) {
                                checkbox.disabled = true;
                                checkbox.checked = false;
                            } else {
                                checkbox.disabled = false;
                            }
                        }

                        if (matches) {
                            visibleCount += 1;
                        }
                    });

                    if (emptyState) {
                        emptyState.hidden = visibleCount !== 0;
                    }
                };

                filterInput.addEventListener('input', () => {
                    applyFilter();
                });

                filterInput.addEventListener('keydown', (event) => {
                    if (event.key === 'Enter') {
                        event.preventDefault();
                        focusFirstCheckbox();
                    }
                });

                applyFilter();
            }

            trigger.addEventListener('click', openPopover);

            popover.addEventListener('click', (event) => {
                if (event.target === popover) {
                    closePopover();
                }
            });

            document.addEventListener('keydown', (event) => {
                if (event.key === 'Escape' && popover.classList.contains('open')) {
                    closePopover();
                }
            });

            if (cancelButton) {
                cancelButton.addEventListener('click', () => {
                    closePopover();
                });
            }

            if (form && submitButton) {
                form.addEventListener('submit', async (event) => {
                    event.preventDefault();

                    const selected = Array.from(form.querySelectorAll('input[name="wineVintageIds"]:checked'))
                        .map((input) => input.value)
                        .filter((value) => typeof value === 'string' && value.trim().length > 0);

                    if (selected.length === 0) {
                        window.alert('Select at least one wine to make new waves.');
                        return;
                    }

                    const originalLabel = submitButton.textContent;
                    submitButton.disabled = true;
                    submitButton.textContent = 'Making waves…';

                    try {
                        const headers = {
                            'Content-Type': 'application/json',
                            'Accept': 'application/json'
                        };

                        const tokenInput = form.querySelector('input[name="__RequestVerificationToken"]');
                        if (tokenInput && tokenInput instanceof HTMLInputElement && tokenInput.value) {
                            headers['RequestVerificationToken'] = tokenInput.value;
                        }

                        const response = await fetch(endpoint, {
                            method: 'POST',
                            headers,
                            credentials: 'same-origin',
                            body: JSON.stringify({ wineVintageIds: selected })
                        });

                        const contentType = response.headers.get('content-type') || '';
                        const expectsJson = contentType.toLowerCase().includes('application/json');
                        const payload = expectsJson ? await response.json().catch(() => null) : null;

                        if (!response.ok || !payload) {
                            const errorMessage = payload?.message || 'We could not create new waves. Please try again.';
                            window.alert(errorMessage);
                            return;
                        }

                        window.alert(payload.message || 'Wine Waves updated your evolution scores.');
                        closePopover();
                        window.location.reload();
                    } catch (error) {
                        window.alert('We could not create new waves. Please try again.');
                    } finally {
                        submitButton.disabled = false;
                        submitButton.textContent = originalLabel;
                    }
                });
            }
        })();

        (function () {
            const form = document.querySelector('[data-delete-waves-form]');
            if (!form) {
                return;
            }

            const button = form.querySelector('[data-delete-waves-trigger]');
            if (!button) {
                return;
            }

            const endpoint = '/wine-surfer/wine-waves/delete';

            form.addEventListener('submit', async (event) => {
                event.preventDefault();

                if (button.disabled) {
                    return;
                }

                const confirmation = window.confirm('Delete all Wine Waves evolution scores? This cannot be undone.');
                if (!confirmation) {
                    return;
                }

                const originalText = button.textContent;
                const originalDisabled = button.disabled;
                const originalAriaDisabled = button.getAttribute('aria-disabled');

                button.disabled = true;
                button.setAttribute('aria-disabled', 'true');
                button.textContent = 'Deleting…';

                try {
                    const headers = {
                        'Accept': 'application/json'
                    };

                    const tokenInput = form.querySelector('input[name="__RequestVerificationToken"]');
                    if (tokenInput instanceof HTMLInputElement && tokenInput.value) {
                        headers['RequestVerificationToken'] = tokenInput.value;
                    }

                    const response = await fetch(endpoint, {
                        method: 'POST',
                        headers,
                        credentials: 'same-origin'
                    });

                    const contentType = response.headers.get('content-type') || '';
                    const expectsJson = contentType.toLowerCase().includes('application/json');
                    const payload = expectsJson ? await response.json().catch(() => null) : null;

                    if (!response.ok || !payload) {
                        const errorMessage = payload?.message || 'We could not delete your waves. Please try again.';
                        window.alert(errorMessage);
                        return;
                    }

                    window.alert(payload.message || 'Deleted all Wine Waves evolution scores.');
                    window.location.reload();
                } catch (error) {
                    window.alert('We could not delete your waves. Please try again.');
                } finally {
                    button.textContent = originalText;

                    if (!originalDisabled) {
                        button.disabled = false;

                        if (originalAriaDisabled === null) {
                            button.removeAttribute('aria-disabled');
                        } else {
                            button.setAttribute('aria-disabled', originalAriaDisabled);
                        }
                    }
                }
            });
        })();

        (function () {
            const buttons = document.querySelectorAll('[data-waves-delete-single]');
            if (!buttons.length) {
                return;
            }

            const tokenInput = document.querySelector('[data-delete-waves-form] input[name="__RequestVerificationToken"]');
            const verificationToken = tokenInput instanceof HTMLInputElement ? tokenInput.value : null;

            buttons.forEach((button) => {
                button.addEventListener('click', async (event) => {
                    event.preventDefault();

                    const wineVintageId = button.getAttribute('data-wine-vintage-id');
                    if (!wineVintageId) {
                        return;
                    }

                    const label = button.getAttribute('data-wine-label') || 'this vintage';
                    const confirmation = window.confirm(`Delete waves for ${label}? This cannot be undone.`);
                    if (!confirmation) {
                        return;
                    }

                    const endpoint = `/wine-surfer/wine-waves/delete/vintage/${wineVintageId}`;
                    const headers = { 'Accept': 'application/json' };
                    if (verificationToken) {
                        headers['RequestVerificationToken'] = verificationToken;
                    }

                    const originalDisabled = button.disabled;
                    const originalAriaDisabled = button.getAttribute('aria-disabled');
                    button.disabled = true;
                    button.setAttribute('aria-disabled', 'true');
                    button.classList.add('is-loading');

                    try {
                        const response = await fetch(endpoint, {
                            method: 'POST',
                            headers,
                            credentials: 'same-origin'
                        });

                        const contentType = response.headers.get('content-type') || '';
                        const expectsJson = contentType.toLowerCase().includes('application/json');
                        const payload = expectsJson ? await response.json().catch(() => null) : null;

                        if (!response.ok || !payload) {
                            const errorMessage = payload?.message || 'We could not delete waves for that vintage. Please try again.';
                            window.alert(errorMessage);
                            return;
                        }

                        window.alert(payload.message || `Deleted waves for ${label}.`);
                        window.location.reload();
                    } catch (error) {
                        window.alert('We could not delete waves for that vintage. Please try again.');
                    } finally {
                        button.classList.remove('is-loading');

                        if (!originalDisabled) {
                            button.disabled = false;

                            if (originalAriaDisabled === null) {
                                button.removeAttribute('aria-disabled');
                            } else {
                                button.setAttribute('aria-disabled', originalAriaDisabled);
                            }
                        }
                    }
                });
            });
        })();

        (function () {
            const data = @Html.Raw(chartDataJson);
            const hasData = Array.isArray(data) && data.length > 0;
            if (!hasData) {
                return;
            }

            const ctx = document.getElementById('wineWavesChart');
            if (!ctx) {
                return;
            }

            const legendContainer = document.querySelector('[data-waves-legend]');
            const urgencyList = document.querySelector('[data-waves-urgency-list]');
            const urgencyEmptyState = document.querySelector('[data-waves-urgency-empty]');
            const urgencyYearElement = document.querySelector('[data-waves-urgency-year]');
            const orderingLabel = document.querySelector('[data-waves-ordering-label]');
            const orderingYearElement = orderingLabel?.querySelector('[data-waves-ordering-year]');

            const fallbackColor = '#f6c672';
            const resolveColor = (value) => {
                if (typeof value === 'string') {
                    const trimmed = value.trim();
                    if (trimmed.length > 0) {
                        return trimmed;
                    }
                }

                return fallbackColor;
            };

            const hexToRgba = (hex, alpha = 1) => {
                if (typeof hex !== 'string') {
                    return hex;
                }

                const normalized = hex.replace('#', '').trim();
                if (normalized.length !== 3 && normalized.length !== 6) {
                    return hex;
                }

                const expanded = normalized.length === 3
                    ? normalized.split('').map((char) => char + char).join('')
                    : normalized;

                const r = Number.parseInt(expanded.slice(0, 2), 16);
                const g = Number.parseInt(expanded.slice(2, 4), 16);
                const b = Number.parseInt(expanded.slice(4, 6), 16);

                if ([r, g, b].some((component) => Number.isNaN(component))) {
                    return hex;
                }

                return `rgba(${r}, ${g}, ${b}, ${alpha})`;
            };

            const allYears = data.flatMap(dataset => dataset.points?.map(point => Number(point.year)) ?? [])
                .filter(value => Number.isFinite(value));
            if (!allYears.length) {
                return;
            }

            const minYear = Math.min(...allYears);
            const maxYear = Math.max(...allYears);
            const clampYear = (value) => {
                const numeric = Number(value);
                if (!Number.isFinite(numeric)) {
                    return minYear;
                }

                return Math.min(Math.max(numeric, minYear), maxYear);
            };

            let activeYear = clampYear(new Date().getFullYear());

            const formatYearForDisplay = (value) => {
                if (!Number.isFinite(value)) {
                    return '';
                }

                return Number.isInteger(value) ? value.toString() : value.toFixed(1);
            };

            const datasetPointMap = new Map();
            const datasetStatsMap = new Map();

            const clamp01 = (value) => {
                if (!Number.isFinite(value)) {
                    return 0;
                }

                return Math.min(Math.max(value, 0), 1);
            };

            const formatYearDifference = (value) => {
                if (!Number.isFinite(value) || value <= 0) {
                    return 'under a year';
                }

                if (value < 1) {
                    return 'under a year';
                }

                const rounded = Math.max(1, Math.round(value));
                return `${rounded} ${rounded === 1 ? 'year' : 'years'}`;
            };

            const computeDatasetStats = (points) => {
                if (!Array.isArray(points) || points.length === 0) {
                    return null;
                }

                let minScore = Number.POSITIVE_INFINITY;
                let maxScore = Number.NEGATIVE_INFINITY;
                let peakYear = points[0].x;
                let peakScore = points[0].y;

                points.forEach((point) => {
                    if (point.y < minScore) {
                        minScore = point.y;
                    }

                    if (point.y > maxScore || (point.y === maxScore && point.x < peakYear)) {
                        maxScore = point.y;
                        peakYear = point.x;
                        peakScore = point.y;
                    }
                });

                return {
                    minScore,
                    maxScore,
                    peakYear,
                    peakScore,
                    span: Math.max(maxScore - minScore, 0)
                };
            };

            const draggableYearLinePlugin = {
                id: 'draggableYearLine',
                afterDraw(chart, args, pluginOptions) {
                    const { ctx: chartContext, chartArea, scales } = chart;
                    if (!chartArea || !scales?.x) {
                        return;
                    }

                    const { left, right, top, bottom } = chartArea;
                    const xScale = scales.x;
                    const lineYear = pluginOptions?.value ?? activeYear;

                    if (lineYear < xScale.min || lineYear > xScale.max) {
                        return;
                    }

                    const x = xScale.getPixelForValue(lineYear);
                    if (!Number.isFinite(x) || x < left || x > right) {
                        return;
                    }

                    const color = pluginOptions?.color ?? 'rgba(246, 198, 114, 0.75)';
                    const lineWidth = pluginOptions?.lineWidth ?? 2;
                    const dash = Array.isArray(pluginOptions?.dash) ? pluginOptions.dash : [6, 6];

                    chartContext.save();
                    chartContext.beginPath();
                    chartContext.strokeStyle = color;
                    chartContext.lineWidth = lineWidth;
                    chartContext.setLineDash(dash);
                    chartContext.moveTo(x, top);
                    chartContext.lineTo(x, bottom);
                    chartContext.stroke();
                    chartContext.setLineDash([]);
                    chartContext.restore();
                }
            };

            Chart.register(draggableYearLinePlugin);

            const datasets = data.map(dataset => {
                const color = resolveColor(dataset.color);
                const mutedColor = hexToRgba(color, 0.35);
                const sortedPoints = (dataset.points || [])
                    .map(point => ({ x: Number(point.year), y: Number(point.score) }))
                    .filter(point => Number.isFinite(point.x) && Number.isFinite(point.y))
                    .sort((a, b) => a.x - b.x);

                datasetPointMap.set(dataset.id, sortedPoints);
                const stats = computeDatasetStats(sortedPoints);
                if (stats) {
                    datasetStatsMap.set(dataset.id, stats);
                }

                return {
                    label: dataset.label,
                    wineVintageId: dataset.id,
                    data: sortedPoints,
                    borderColor: color,
                    backgroundColor: color,
                    tension: 0.35,
                    borderWidth: 2,
                    pointRadius: 0,
                    pointHoverRadius: 0,
                    pointHitRadius: 10,
                    spanGaps: true,
                    fill: false,
                    hidden: false,
                    originalBorderColor: color,
                    mutedBorderColor: mutedColor
                };
            });

            const getScoreAtYear = (points, year) => {
                if (!Array.isArray(points) || !points.length) {
                    return Number.NEGATIVE_INFINITY;
                }

                if (year <= points[0].x) {
                    return points[0].y;
                }

                const lastPoint = points[points.length - 1];
                if (year >= lastPoint.x) {
                    return lastPoint.y;
                }

                for (let index = 0; index < points.length - 1; index += 1) {
                    const left = points[index];
                    const right = points[index + 1];
                    if (year >= left.x && year <= right.x) {
                        if (right.x === left.x) {
                            return left.y;
                        }

                        const ratio = (year - left.x) / (right.x - left.x);
                        return left.y + ratio * (right.y - left.y);
                    }
                }

                return lastPoint.y;
            };

            const reorderCardsByYear = (year) => {
                if (!legendContainer) {
                    return;
                }

                const cards = Array.from(legendContainer.querySelectorAll('[data-waves-legend-item]'));
                if (!cards.length) {
                    return;
                }

                const scoredCards = cards.map((card) => {
                    const id = card.getAttribute('data-wine-vintage-id');
                    const points = id ? datasetPointMap.get(id) : null;
                    const score = points ? getScoreAtYear(points, year) : Number.NEGATIVE_INFINITY;
                    card.setAttribute('data-waves-order-score', Number.isFinite(score) ? score.toFixed(1) : '');
                    return { card, score };
                });

                scoredCards
                    .sort((a, b) => (Number.isFinite(b.score) ? b.score : Number.NEGATIVE_INFINITY) - (Number.isFinite(a.score) ? a.score : Number.NEGATIVE_INFINITY))
                    .forEach(({ card }) => legendContainer.appendChild(card));
            };

            const updateUrgencyList = (year) => {
                if (!urgencyList) {
                    if (urgencyYearElement) {
                        urgencyYearElement.textContent = formatYearForDisplay(year);
                    }

                    return;
                }

                if (urgencyYearElement) {
                    urgencyYearElement.textContent = formatYearForDisplay(year);
                }

                const entries = data
                    .map((dataset) => {
                        const points = datasetPointMap.get(dataset.id);
                        const stats = datasetStatsMap.get(dataset.id);
                        if (!points || !stats) {
                            return null;
                        }

                        const currentScore = getScoreAtYear(points, year);
                        if (!Number.isFinite(currentScore)) {
                            return null;
                        }

                        const nextScore = getScoreAtYear(points, year + 1);
                        const previousScore = getScoreAtYear(points, year - 1);
                        const yearsPastPeak = Math.max(0, year - stats.peakYear);
                        const yearsUntilPeak = Math.max(0, stats.peakYear - year);
                        const dropFromPeak = Math.max(0, stats.peakScore - currentScore);
                        const normalizedDrop = stats.span > 0 ? clamp01(dropFromPeak / stats.span) : 0;
                        const normalizedPast = clamp01(yearsPastPeak / 5);
                        const normalizedApproach = yearsUntilPeak > 0 ? clamp01(1 - (yearsUntilPeak / 4)) : 0;
                        const slopeAhead = Number.isFinite(nextScore) ? currentScore - nextScore : 0;
                        const slopeBehind = Number.isFinite(previousScore) ? currentScore - previousScore : 0;
                        const normalizedSlope = clamp01((Math.max(0, slopeAhead) + Math.max(0, slopeBehind)) / 2);

                        const urgencyScore = (normalizedPast * 0.6)
                            + (normalizedDrop * 0.25)
                            + (normalizedSlope * 0.15)
                            + (yearsPastPeak <= 0 ? normalizedApproach * 0.1 : 0);

                        const dropText = dropFromPeak > 0.2
                            ? `down ${dropFromPeak.toFixed(1)} pts from the high`
                            : 'just starting to ease off the peak';

                        const status = yearsPastPeak > 0.5
                            ? 'Past prime'
                            : yearsPastPeak > 0
                                ? 'At peak'
                                : yearsUntilPeak <= 1
                                    ? 'Approaching prime'
                                    : 'Aging gracefully';

                        const reason = (() => {
                            if (yearsPastPeak >= 1) {
                                return `Peaked around ${stats.peakYear} (${formatYearDifference(yearsPastPeak)} ago) and ${dropText}.`;
                            }

                            if (yearsPastPeak > 0) {
                                return `Prime hit around ${stats.peakYear} and it's ${dropText}.`;
                            }

                            if (yearsUntilPeak <= 1) {
                                return `Prime window opens by ${stats.peakYear}. Scores are about to crest.`;
                            }

                            return `Prime window expected near ${stats.peakYear}. Still building toward its peak.`;
                        })();

                        return {
                            id: dataset.id,
                            label: dataset.label,
                            status,
                            reason,
                            urgencyScore
                        };
                    })
                    .filter(Boolean)
                    .sort((a, b) => b.urgencyScore - a.urgencyScore);

                urgencyList.replaceChildren();

                if (!entries.length) {
                    if (urgencyEmptyState) {
                        urgencyEmptyState.hidden = false;
                    }

                    document.dispatchEvent(new Event('waves:refresh-highlights'));
                    return;
                }

                if (urgencyEmptyState) {
                    urgencyEmptyState.hidden = true;
                }

                entries.slice(0, 6).forEach((entry, index) => {
                    const item = document.createElement('li');
                    item.className = 'waves-urgency-item';
                    item.setAttribute('data-wine-vintage-id', entry.id);
                    item.setAttribute('data-waves-highlight-card', '');

                    const heading = document.createElement('div');
                    heading.className = 'waves-urgency-item__heading';

                    const text = document.createElement('div');
                    text.className = 'waves-urgency-item__text';

                    const rank = document.createElement('p');
                    rank.className = 'waves-urgency-rank';
                    rank.textContent = `#${index + 1}`;

                    const label = document.createElement('p');
                    label.className = 'waves-urgency-label';
                    label.textContent = entry.label || 'Unnamed vintage';

                    const meta = document.createElement('p');
                    meta.className = 'waves-urgency-meta';
                    meta.textContent = entry.status;

                    text.append(rank, label, meta);

                    const scoreContainer = document.createElement('div');
                    scoreContainer.className = 'waves-urgency-score';

                    const scoreValue = document.createElement('span');
                    scoreValue.className = 'waves-urgency-score-value';
                    scoreValue.textContent = `${Math.round(clamp01(entry.urgencyScore) * 100)}%`;

                    const scoreLabel = document.createElement('span');
                    scoreLabel.className = 'waves-urgency-score-label';
                    scoreLabel.textContent = 'urgency';

                    scoreContainer.append(scoreValue, scoreLabel);
                    heading.append(text, scoreContainer);

                    const reason = document.createElement('p');
                    reason.className = 'waves-urgency-reason';
                    reason.textContent = entry.reason;

                    item.append(heading, reason);
                    urgencyList.appendChild(item);
                });

                document.dispatchEvent(new Event('waves:refresh-highlights'));
            };

            const updateOrderingLabel = (year) => {
                if (!orderingLabel || !orderingYearElement) {
                    return;
                }

                orderingYearElement.textContent = formatYearForDisplay(year);
            };

            const updateChartMarker = (year) => {
                const chartInstance = window.wavesChart;
                if (!chartInstance?.options?.plugins?.draggableYearLine) {
                    return;
                }

                chartInstance.options.plugins.draggableYearLine.value = year;
                chartInstance.update('none');
            };

            const setActiveYear = (year, { updateChart = true } = {}) => {
                const clamped = clampYear(year);
                if (!Number.isFinite(clamped) || Math.abs(clamped - activeYear) < 0.001) {
                    return;
                }

                activeYear = clamped;
                updateOrderingLabel(activeYear);
                reorderCardsByYear(activeYear);
                updateUrgencyList(activeYear);

                if (updateChart) {
                    updateChartMarker(activeYear);
                }
            };

            // Create chart and store globally so we can update the marker position as the user drags
            window.wavesChart = new Chart(ctx, {
                type: 'line',
                data: {
                    datasets
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    interaction: {
                        mode: 'nearest',
                        intersect: false
                    },
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            callbacks: {
                                title(tooltipItems) {
                                    const item = tooltipItems[0];
                                    return `Year ${item.parsed.x}`;
                                },
                                label(tooltipItem) {
                                    const value = Number.parseFloat(tooltipItem.formattedValue).toFixed(1);
                                    return `${tooltipItem.dataset.label}: ${value}`;
                                }
                            }
                        },
                        draggableYearLine: {
                            value: activeYear,
                            color: 'rgba(246, 198, 114, 0.75)',
                            lineWidth: 2,
                            dash: [6, 6]
                        }
                    },
                    scales: {
                        x: {
                            type: 'linear',
                            title: {
                                display: true,
                                text: 'Year'
                            },
                            ticks: {
                                callback(value) {
                                    const numericValue = Number(value);
                                    if (Number.isFinite(numericValue)) {
                                        return Math.round(numericValue).toString();
                                    }

                                    return '';
                                }
                            },
                            grid: {
                                color: 'rgba(244, 241, 234, 0.08)'
                            }
                        },
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Evolution Score'
                            },
                            ticks: {
                                callback(value) {
                                    return Number.parseFloat(value).toFixed(0);
                                }
                            },
                            grid: {
                                color: 'rgba(244, 241, 234, 0.08)'
                            }
                        }
                    }
                }
            });

            updateOrderingLabel(activeYear);
            reorderCardsByYear(activeYear);
            updateUrgencyList(activeYear);

            const chartCanvas = ctx;
            let isDragging = false;
            let activePointerId = null;

            // Ensure chart resizes with its container and viewport changes
            const scheduleResize = (() => {
                let rafId = null;
                return () => {
                    if (rafId !== null) return;
                    rafId = requestAnimationFrame(() => {
                        rafId = null;
                        try {
                            window.wavesChart?.resize();
                        } catch (_) {
                            // ignore
                        }
                    });
                };
            })();

            // Observe container resize
            const wrapperEl = document.querySelector('[data-waves-chart-wrapper]');
            if (wrapperEl && 'ResizeObserver' in window) {
                const ro = new ResizeObserver(() => scheduleResize());
                ro.observe(wrapperEl);
            }

            // Also resize on orientation/window changes
            window.addEventListener('resize', scheduleResize);
            window.addEventListener('orientationchange', scheduleResize);

            const getYearFromPointerEvent = (event) => {
                const chart = window.wavesChart;
                const xScale = chart?.scales?.x;
                const chartArea = chart?.chartArea;
                if (!chart || !xScale || !chartArea) {
                    return null;
                }

                const rect = chartCanvas.getBoundingClientRect();
                const relativeX = event.clientX - rect.left;
                const relativeY = event.clientY - rect.top;

                if (relativeX < chartArea.left || relativeX > chartArea.right || relativeY < chartArea.top || relativeY > chartArea.bottom) {
                    return null;
                }

                const value = xScale.getValueForPixel(relativeX);
                if (!Number.isFinite(value)) {
                    return null;
                }

                return clampYear(value);
            };

            const stopDragging = () => {
                isDragging = false;
                if (activePointerId !== null && typeof chartCanvas.releasePointerCapture === 'function') {
                    try {
                        chartCanvas.releasePointerCapture(activePointerId);
                    } catch (error) {
                        // Ignore release errors
                    }
                }

                activePointerId = null;
            };

            chartCanvas.addEventListener('pointerdown', (event) => {
                const year = getYearFromPointerEvent(event);
                if (year === null) {
                    return;
                }

                event.preventDefault();
                isDragging = true;
                activePointerId = event.pointerId;

                if (typeof chartCanvas.setPointerCapture === 'function') {
                    chartCanvas.setPointerCapture(event.pointerId);
                }

                setActiveYear(year);
            });

            chartCanvas.addEventListener('pointermove', (event) => {
                if (!isDragging) {
                    return;
                }

                const year = getYearFromPointerEvent(event);
                if (year === null) {
                    return;
                }

                event.preventDefault();
                setActiveYear(year);
            });

            chartCanvas.addEventListener('pointerup', () => {
                stopDragging();
            });

            chartCanvas.addEventListener('pointercancel', () => {
                stopDragging();
            });

            chartCanvas.addEventListener('pointerleave', () => {
                stopDragging();
            });
        })();

        (function () {
            const getHighlightCards = () => Array.from(document.querySelectorAll('[data-waves-highlight-card]'));
            if (!getHighlightCards().length) {
                return;
            }

            let highlightedWineVintageId = null;

            const updateCardState = () => {
                getHighlightCards().forEach((card) => {
                    const cardId = card.getAttribute('data-wine-vintage-id');
                    const isHighlighted = Boolean(highlightedWineVintageId && cardId === highlightedWineVintageId);
                    card.classList.toggle('is-highlighted', isHighlighted);
                });
            };

            const applyHighlightStyles = () => {
                updateCardState();

                const chart = window.wavesChart;
                const datasets = chart?.data?.datasets;
                if (!chart || !Array.isArray(datasets)) {
                    return;
                }

                const shouldDimOthers = Boolean(highlightedWineVintageId);
                datasets.forEach((dataset) => {
                    const matchesHighlight = Boolean(highlightedWineVintageId && dataset.wineVintageId === highlightedWineVintageId);
                    const originalColor = dataset.originalBorderColor || dataset.borderColor;
                    const mutedColor = dataset.mutedBorderColor || originalColor;

                    dataset.borderWidth = matchesHighlight ? 4 : 2;
                    dataset.pointRadius = matchesHighlight ? 3 : 0;
                    dataset.pointHoverRadius = matchesHighlight ? 5 : 0;

                    if (matchesHighlight && dataset.hidden === true) {
                        dataset.hidden = false;
                    }

                    if (!shouldDimOthers || matchesHighlight) {
                        dataset.borderColor = originalColor;
                        dataset.backgroundColor = originalColor;
                    } else {
                        dataset.borderColor = mutedColor;
                        dataset.backgroundColor = mutedColor;
                    }
                });

                if (typeof chart.update === 'function') {
                    chart.update();
                }
            };

            const toggleHighlight = (wineVintageId) => {
                if (!wineVintageId) {
                    highlightedWineVintageId = null;
                } else {
                    highlightedWineVintageId = highlightedWineVintageId === wineVintageId ? null : wineVintageId;
                }

                applyHighlightStyles();
            };

            document.addEventListener('click', (event) => {
                const card = event.target.closest('[data-waves-highlight-card]');
                if (!card) {
                    return;
                }

                if (event.target instanceof Element && event.target.closest('button')) {
                    return;
                }

                const wineVintageId = card.getAttribute('data-wine-vintage-id');
                if (!wineVintageId) {
                    return;
                }

                toggleHighlight(wineVintageId);
            });

            document.addEventListener('waves:refresh-highlights', () => {
                applyHighlightStyles();
            });

            applyHighlightStyles();
        })();

        (function () {
            const buttons = Array.from(document.querySelectorAll('[data-waves-toggle-visibility]'));
            if (!buttons.length) {
                return;
            }

            const findDataset = (chart, wineVintageId) => {
                if (!chart || !wineVintageId) {
                    return null;
                }

                return chart.data?.datasets?.find((dataset) => dataset.wineVintageId === wineVintageId) || null;
            };

            const updateButtonState = (button, isHidden) => {
                const label = button.getAttribute('data-wine-label') || 'this vintage';
                const action = isHidden ? 'Show' : 'Hide';
                button.setAttribute('aria-pressed', isHidden ? 'true' : 'false');
                button.setAttribute('aria-label', `${action} curve for ${label}`);
                button.setAttribute('title', `${action} curve`);
            };

            const syncButton = (button) => {
                const chart = window.wavesChart;
                const wineVintageId = button.getAttribute('data-wine-vintage-id');
                if (!chart || !wineVintageId) {
                    return;
                }

                const dataset = findDataset(chart, wineVintageId);
                if (!dataset) {
                    return;
                }

                updateButtonState(button, dataset.hidden === true);
            };

            buttons.forEach((button) => {
                button.addEventListener('click', () => {
                    const chart = window.wavesChart;
                    const wineVintageId = button.getAttribute('data-wine-vintage-id');
                    if (!chart || !wineVintageId) {
                        return;
                    }

                    const dataset = findDataset(chart, wineVintageId);
                    if (!dataset) {
                        return;
                    }

                    const nextHidden = !(dataset.hidden === true);
                    dataset.hidden = nextHidden;
                    if (typeof chart.update === 'function') {
                        chart.update();
                    }

                    updateButtonState(button, nextHidden);
                });

                syncButton(button);
            });
        })();
    </script>
    @await Html.PartialAsync("_WineSurferBottomNav", Context?.Request?.Path.Value)
